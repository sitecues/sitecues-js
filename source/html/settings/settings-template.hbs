<sc-cards id="scp-settings" class="scp-if-settings scp-transition-opacity scp-secondary-feature">
  <sc-card id="scp-theme-settings" aria-labelledby="scp-theme-settings-tab">
    <sc-p class="scp-color-theme-group">
      <sc-button data-setting-name="themeName" class="scp-hand-cursor scp-tabbable">
        {{{theme.None}}}
      </sc-button>
      <sc-button data-setting-name="themeName" data-setting-value="warm" class="scp-hand-cursor scp-tabbable">
        {{{theme.Warm}}}
      </sc-button>
      <sc-button data-setting-name="themeName" data-setting-value="bold" class="scp-hand-cursor scp-tabbable">
        {{{theme.Bold}}}
      </sc-button>
      <sc-button data-setting-name="themeName" data-setting-value="dark" class="scp-hand-cursor scp-tabbable">
        {{{theme.Dark}}}
      </sc-button>
    </sc-p>
    <sc-p class="scp-range-group" id="scp-theme-power-group">
      <sc-normal-range id="scp-theme-power" min=".01" max="1" step =".03" value=".61" data-setting-name="themePower" aria-labelledby="scp-theme-power-label"></sc-normal-range>
      <sc-span id="scp-theme-power-label">{{theme.intensity}}</sc-span>
    </sc-p>
    <sc-p  class="scp-range-group" id="scp-theme-text-hue-group">
      <sc-hue-range id="scp-theme-text-hue" min=".01" max="1.031" step =".03" value="1.03" data-setting-name="themeTextHue" aria-labelledby="scp-theme-text-hue-label"></sc-hue-range>
      <sc-span id="scp-theme-text-hue-label">{{theme.text_color}}</sc-span>
    </sc-p>
  </sc-card>

  <sc-card id="scp-mouse-settings" aria-labelledby="scp-mouse-settings-tab">
    <sc id="scp-mouse-settings-group" role="presentation">
      <sc-p class="scp-range-group" data-show="true">
        <sc-normal-range id="scp-mouse-size" min="1" max="3.5" step =".05" data-setting-name="mouseSize" aria-labelledby="scp-mouse-size-label"></sc-normal-range>
        <sc-span id="scp-mouse-size-label">{{mouse.size}}</sc-span>
      </sc-p>
      <sc-p class="scp-range-group scp-no-ie" data-show="true">
        <sc-hue-range id="scp-mouse-hue" min=".01" max="1.031" step =".03" value="1.03" data-setting-name="mouseHue" aria-labelledby="scp-mouse-hue-label"></sc-hue-range>
        <sc-span id="scp-mouse-hue-label">{{mouse.color}}</sc-span>
      </sc-p>
    </sc>
  </sc-card>

  <!-- Header -->
  <sc-h1 class="scp-card-header">{{title}}</sc-h1>

  <sc class="scp-card-chooser">
    <sc-tab id="scp-theme-settings-tab" data-target="scp-theme-settings">{{cards.Colors}}</sc-tab>
    <sc-tab id="scp-mouse-settings-tab" data-target="scp-mouse-settings">{{cards.Mouse}}</sc-tab>
  </sc>

  <sc class="scp-card-indicator"></sc>
</sc-cards>
