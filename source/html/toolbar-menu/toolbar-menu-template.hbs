  <sc-toolbar-menuitem id="scp-toolbar-what-is">{{what_is_this}}</sc-toolbar-menuitem>
  <sc-blurb id="scp-blurb-what-is">
    Sitecues zoom and speech makes the web easier to see, hear and use.
  </sc-blurb>
  <sc-toolbar-menuitem id="scp-toolbar-share">{{share_sitecues}}</sc-toolbar-menuitem>
  <sc-toolbar-menuitem id="scp-toolbar-turn-off" data-sitecues-type="page">{{turn_off}}<sc-toolbar-menuitem id="scp-toolbar-hide">{{{hide}}}</sc-toolbar-menuitem></sc-toolbar-menuitem>
  <sc-toolbar-menuitem id="scp-toolbar-turn-off" data-sitecues-type="extension">{{turn_off_this_site}}</sc-toolbar-menuitem>
